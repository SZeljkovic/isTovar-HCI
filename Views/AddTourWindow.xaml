<Window x:Class="Projekat_B_isTovar.Views.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding AddTourTitle}" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:AddTourStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="15">
            <!-- Departure Date and Time -->
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=DepartureDate}" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Foreground="{DynamicResource PrimaryColor}"
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <DatePicker x:Name="DepartureDatePicker" 
                           Width="200" 
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource PrimaryColor}"
                           materialDesign:HintAssist.Hint="{Binding SelectDate}"
                           Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <ComboBox x:Name="DepartureHourBox" 
                         Width="100" 
                         Margin="0,0,10,0"
                         Foreground="{DynamicResource PrimaryColor}"
                         materialDesign:HintAssist.Hint="{Binding Hours}"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                <ComboBox x:Name="DepartureMinuteBox" 
                         Width="100"
                         materialDesign:HintAssist.Hint="{Binding Minutes}"
                         Foreground="{DynamicResource PrimaryColor}"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
            </StackPanel>

            <!-- Arrival Date and Time -->
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=ArrivalDate}" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Foreground="{DynamicResource PrimaryColor}"
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <DatePicker x:Name="ArrivalDatePicker" 
                           Width="200" 
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource PrimaryColor}"
                           materialDesign:HintAssist.Hint="{Binding SelectDate}"
                           Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <ComboBox x:Name="ArrivalHourBox" 
                         Width="100" 
                         Margin="0,0,10,0"
                         Foreground="{DynamicResource PrimaryColor}"
                         materialDesign:HintAssist.Hint="{Binding Hours}"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectionChanged="ArrivalHourBox_SelectionChanged"/>
                <ComboBox x:Name="ArrivalMinuteBox" 
                         Width="100"
                         materialDesign:HintAssist.Hint="{Binding Minutes}"
                         Foreground="{DynamicResource PrimaryColor}"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Status}" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Foreground="{DynamicResource PrimaryColor}"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="StatusTextBox" 
                    Width="300" 
                    Margin="0,0,0,15"
                    Foreground="{DynamicResource PrimaryColor}"
                    materialDesign:HintAssist.Hint="{Binding EnterStatus}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <!-- Final Price -->
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=FinalPrice}" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Foreground="{DynamicResource PrimaryColor}"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="PriceTextBox" 
                    Width="300" 
                    Margin="0,0,0,15"
                    Foreground="{DynamicResource PrimaryColor}"
                    materialDesign:HintAssist.Hint="{Binding EnterFinalPrice}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <!-- Driver Selection -->
            <Button x:Name="SelectDriverButton" 
                    Content="{Binding Source={StaticResource Strings}, Path=SelectDriver}" 
                    Width="200" 
                    Margin="0,10,0,15" 
                    Background="{DynamicResource PrimaryColor}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Click="SelectDriverButton_Click"/>
            <TextBlock x:Name="DriverInfoLabel" 
                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                       FontWeight="Bold" 
                       Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,10">
            <Button x:Name="SubmitButton" 
                    Content="{Binding Source={StaticResource Strings}, Path=SubmitButton}" 
                    Width="120" 
                    Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryColor}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Click="SubmitButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="{Binding Source={StaticResource Strings}, Path=CloseButton}" 
                    Width="120" 
                    Background="{DynamicResource PrimaryColor}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>