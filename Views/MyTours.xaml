<Window x:Class="Projekat_B_isTovar.Views.MyTours"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding Title}" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:MyToursStrings x:Key="Strings"/>
        <!-- Define colors for upcoming and past tours (used for border or tint) -->
        <SolidColorBrush x:Key="UpcomingTourAccent" Color="#4CAF50"/>
        <!-- Green for upcoming -->
        <SolidColorBrush x:Key="PastTourAccent" Color="#F44336"/>
        <!-- Red for past -->
        <!-- Define style for Expander -->
        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5"/>
            <!-- Optional: Add rounded corners if supported by CardBackgroundBrush -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsUpcoming}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource UpcomingTourAccent}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsUpcoming}" Value="False">
                    <Setter Property="BorderBrush" Value="{StaticResource PastTourAccent}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lista tura sa grupisanjem -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ToursList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <!-- Grupni naslov (Upcoming/Past) -->
                            <TextBlock Text="{Binding GroupName}"
                                       FontSize="18" FontWeight="Bold"
                                       Margin="0,10,0,5"
                                       Foreground="{DynamicResource PrimaryColor}"/>
                            <!-- Podlista tura unutar grupe -->
                            <ItemsControl ItemsSource="{Binding Tours}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Header="{Binding Header}"
                                                  Style="{StaticResource ExpanderStyle}">
                                            <StackPanel Margin="10">
                                                <TextBlock Text="{Binding Departure}" 
                                                           Foreground="{DynamicResource PrimaryColor}"/>
                                                <TextBlock Text="{Binding Arrival}" 
                                                           Foreground="{DynamicResource PrimaryColor}"/>
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="{DynamicResource PrimaryColor}"/>
                                                <TextBlock Text="{Binding Price}" 
                                                           Foreground="{DynamicResource PrimaryColor}"/>
                                                <!-- Dugme za detalje ture -->
                                                <Button Content="{Binding DetailsLabel}" 
                                                        Margin="0,10,0,0"
                                                        Width="120"
                                                        Background="{DynamicResource PrimaryColor}"
                                                        HorizontalAlignment="Left"
                                                        Tag="{Binding TourId}"
                                                        Click="DetailsButton_Click"/>
                                            </StackPanel>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Dugme za zatvaranje -->
        <Button Content="{Binding CloseButton}"
                Grid.Row="1" Width="120" Height="35"
                Background="{DynamicResource PrimaryColor}"
                HorizontalAlignment="Right" Margin="0,20,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>