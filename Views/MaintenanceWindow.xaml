<Window x:Class="Projekat_B_isTovar.Views.MaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding Title}"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:MaintenanceStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Title}"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource PrimaryColor}"
                   Margin="0,0,0,20"/>

        <!-- Dvije kartice: Kamion i Prikolica -->
        <TabControl Grid.Row="1"
                    Background="{DynamicResource BackgroundColor}">
            <!-- Kamion -->
            <TabItem Header="{Binding Source={StaticResource Strings}, Path=Truck}">
                <StackPanel Margin="15">
                    <TextBlock Text="{Binding Source={StaticResource Strings}, Path=TruckInfo}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryColor}"
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgKamion"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="0,0,0,15"
                              Background="{DynamicResource BackgroundColor}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Date}" Binding="{Binding Datum}"/>
                            <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Description}" Binding="{Binding Opis}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Prikolica -->
            <TabItem Header="{Binding Source={StaticResource Strings}, Path=Trailer}">
                <StackPanel Margin="15">
                    <TextBlock Text="{Binding Source={StaticResource Strings}, Path=TrailerInfo}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryColor}"
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgPrikolica"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="0,0,0,15"
                              Background="{DynamicResource BackgroundColor}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Date}" Binding="{Binding Datum}"/>
                            <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Description}" Binding="{Binding Opis}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
