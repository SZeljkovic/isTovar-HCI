<Window x:Class="Projekat_B_isTovar.Views.IssuesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding IssuesTitle}" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:IssuesStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=IssuesTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource PrimaryColor}"/>

        <!-- DataGrid -->
        <DataGrid x:Name="IssuesDataGrid" 
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                  RowBackground="{DynamicResource RowBackgroundBrush}"
                  Foreground="{DynamicResource PrimaryColor}"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Id}" Binding="{Binding IdProblema}" Width="80"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=UserId}" Binding="{Binding IdKorisnika}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Content}" Binding="{Binding TekstProblema}" Width="300"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Date}" Binding="{Binding Datum}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Status}" Binding="{Binding Status}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugmad za akcije -->
        <StackPanel x:Name="ActionButtonsPanel" Orientation="Horizontal" Grid.Row="2" Margin="10,5">
            <Button Content="Izmijeni"
                    Width="100" Margin="5"
                    Background="{DynamicResource PrimaryColor}"
                    Click="EditIssue_Click"/>
            <Button Content="{Binding Source={StaticResource Strings}, Path=CloseButton}" 
                    Width="100" Height="30"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Background="{DynamicResource PrimaryColor}"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Panel za izmjenu -->
        <GroupBox Header="Izmjena problema" 
          Grid.Row="2"
          x:Name="EditPanel" Visibility="Collapsed" Margin="10">
            <StackPanel Margin="10" Width="400">
                <TextBox x:Name="editUserId"
                 materialDesign:HintAssist.Hint="ID korisnika"
                 Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>

                <TextBox x:Name="editContent"
                 materialDesign:HintAssist.Hint="Tekst problema"
                 Foreground="{DynamicResource PrimaryColor}" Margin="0,5"
                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>

                <DatePicker x:Name="editDate"
                    materialDesign:HintAssist.Hint="Datum"
                    Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>

                <ComboBox x:Name="editStatus"
                  materialDesign:HintAssist.Hint="Status"
                  Foreground="{DynamicResource PrimaryColor}" Margin="0,5">
                    <ComboBoxItem Content="Open"/>
                    <ComboBoxItem Content="Closed"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="Sačuvaj"
                    Width="100" Height="30"
                    Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryColor}"
                    Click="UpdateIssue_Click"/>
                    <Button Content="Otkaži"
                    Width="100" Height="30"
                    Background="{DynamicResource PrimaryColor}"
                    Click="CancelEdit_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>