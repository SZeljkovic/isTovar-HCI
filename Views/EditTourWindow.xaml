<Window x:Class="Projekat_B_isTovar.Views.EditTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{Binding Title}" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:EditTourStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <!-- Naslov -->
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Title}"
                       FontSize="22" FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryColor}"/>

            <!-- Odabir ture -->
            <ComboBox x:Name="cbTure"
                      DisplayMemberPath="Display"
                      SelectedValuePath="Id"
                      Margin="0,0,0,20"
                      Foreground="{DynamicResource PrimaryColor}"
                      materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=SelectTour}"/>

            <!-- Izvoriste -->
            <GroupBox Header="{Binding Source={StaticResource Strings}, Path=Source}" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <ComboBox x:Name="cbFirmeIzvoriste"
                              DisplayMemberPath="Naziv"
                              SelectedValuePath="Id"
                              Margin="0,0,0,10"
                              Foreground="{DynamicResource PrimaryColor}"
                              materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=SelectCompany}"/>

                    <!-- Datum + Vrijeme -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <DatePicker x:Name="dpUtovar"
                                    Width="200"
                                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                                    Foreground="{DynamicResource PrimaryColor}"
                                    Margin="0,0,10,0"/>
                        <materialDesign:TimePicker x:Name="tpUtovar"
                                                   Width="120"
                                                   Foreground="{DynamicResource PrimaryColor}"
                                                   Is24Hours="True"/>
                    </StackPanel>

                    <Button Content="{Binding Source={StaticResource Strings}, Path=AddSource}"
                            Click="AddSource_Click"
                            Background="Green" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Odrediste -->
            <GroupBox Header="{Binding Source={StaticResource Strings}, Path=Destination}" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <ComboBox x:Name="cbFirmeOdrediste"
                              DisplayMemberPath="Naziv"
                              SelectedValuePath="Id"
                              Margin="0,0,0,10"
                              Foreground="{DynamicResource PrimaryColor}"
                              materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=SelectCompany}"/>

                    <!-- Datum + Vrijeme -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <DatePicker x:Name="dpIstovar"
                                    Width="200"
                                    Foreground="{DynamicResource PrimaryColor}"
                                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                                    Margin="0,0,10,0"/>
                        <materialDesign:TimePicker x:Name="tpIstovar"
                                                   Width="120"
                                                   Foreground="{DynamicResource PrimaryColor}"
                                                   Is24Hours="True"/>
                    </StackPanel>

                    <Button Content="{Binding Source={StaticResource Strings}, Path=AddDestination}"
                            Click="AddDestination_Click"
                            Background="Green" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <!-- Feedback -->
            <TextBlock x:Name="lblMessage"
                       Foreground="Tomato"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
