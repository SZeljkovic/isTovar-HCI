<Window x:Class="Projekat_B_isTovar.Views.MyTruck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding Title}" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:MyTruckStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Podaci o kamionu -->
        <StackPanel>
            <TextBlock Text="{Binding TypeLabel}" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="TypeValue" Margin="0,0,0,10"
                       Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding BrandLabel}" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="BrandValue" Margin="0,0,0,10"
                       Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding HorsepowerLabel}" FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="HpValue" Margin="0,0,0,10"
                        Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding FuelLabel}" FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="FuelValue" Margin="0,0,0,10"
                        Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding YearLabel}" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="YearValue" Margin="0,0,0,10"
                       Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding LicenseLabel}" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="LicenseValue" Margin="0,0,0,10"
                       Foreground="{DynamicResource PrimaryColor}" />

            <TextBlock Text="{Binding MileageLabel}" FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryColor}" />
            <TextBlock x:Name="MileageValue" Margin="0,0,0,10"
                        Foreground="{DynamicResource PrimaryColor}" />
        </StackPanel>

        <!-- Dugme za zatvaranje -->
        <Button Content="{Binding CloseButton}"
                Grid.Row="1" Width="120" Height="35"
                HorizontalAlignment="Right" Margin="0,20,0,0"
                Background="{DynamicResource PrimaryColor}"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
