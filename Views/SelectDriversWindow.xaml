<Window x:Class="Projekat_B_isTovar.Views.SelectDriversWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:DriversStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=SelectDriversTitle}" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="10"
                   Foreground="{DynamicResource PrimaryColor}"/>

        <DataGrid x:Name="DriversDataGrid" 
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                  RowBackground="{DynamicResource RowBackgroundBrush}"
                  Foreground="{DynamicResource PrimaryColor}"
                  GridLinesVisibility="All"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">

            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Id}" 
                                    Binding="{Binding IdKorisnika}" Width="50"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnName}" 
                                    Binding="{Binding Ime}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnSurname}" 
                                    Binding="{Binding Prezime}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnAvailable}" 
                                    Binding="{Binding Dostupnost}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="{Binding Source={StaticResource Strings}, Path=SelectButton}" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryColor}"
                    Click="SelectButton_Click"/>
            <Button Content="{Binding Source={StaticResource Strings}, Path=CloseButton}" 
                    Width="100" Height="30"
                    Background="{DynamicResource PrimaryColor}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>