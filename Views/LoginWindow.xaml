<Window x:Class="Projekat_B_isTovar.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding Title}"
        Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:LoginStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid>
        <!-- Kartica u centru -->
        <Border Background="{DynamicResource CardBackgroundColor}"
                CornerRadius="20"
                Padding="30"
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource MaterialDesignElevation2}">

            <StackPanel>

                <!-- Naslov -->
                <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Title}"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Korisničko ime -->
                <TextBox x:Name="txtUsername"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Username}"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                         Foreground="{DynamicResource PrimaryColor}"
                         Background="Transparent"
                         Margin="0,0,0,15"/>

                <!-- Lozinka -->
                <PasswordBox x:Name="txtPassword"
                             materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Password}"
                             Style="{DynamicResource MaterialDesignOutlinedPasswordBox}"
                             Foreground="{DynamicResource PrimaryColor}"
                             Background="Transparent"
                             Margin="0,0,0,25"/>

                <!-- Dugme -->
                <Button Content="{Binding Source={StaticResource Strings}, Path=LoginButton}"
                        Height="40"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Login_Click"
                        Style="{DynamicResource MaterialDesignRaisedButton}"/>

                <!-- Link za registraciju -->
                <TextBlock Foreground="{DynamicResource PrimaryColor}"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0">
                    <Run Text="{Binding Source={StaticResource Strings}, Path=NoAccountMessage, Mode=OneWay}"/>
                    <Hyperlink Click="OpenRegister_Click" Foreground="{DynamicResource AccentColor}">
                        <Run Text="{Binding Source={StaticResource Strings}, Path=RegisterLink, Mode=OneWay}"/>
                    </Hyperlink>
                </TextBlock>

                <!-- Feedback -->
                <TextBlock x:Name="lblError"
                           Text=""
                           Foreground="Tomato"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
