<Window x:Class="Projekat_B_isTovar.Views.ReportIssue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding ReportIssueTitle}" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:ReportIssueStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="{Binding ReportIssueTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryColor}"
                   Margin="0,0,0,15"/>

        <!-- Unos problema -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding IssueDescriptionLabel}" 
                       Foreground="{DynamicResource PrimaryColor}" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="IssueDescriptionBox" 
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Height="180"
                     Background="{DynamicResource TextBoxBackgroundBrush}"
                     Foreground="{DynamicResource PrimaryColor}"
                     BorderBrush="{DynamicResource PrimaryColor}"/>
        </StackPanel>

        <!-- Dugmad -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{Binding SubmitButton}" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryColor}"
                    Click="SubmitButton_Click"/>
            <Button Content="{Binding CloseButton}" 
                    Width="100" Height="30"
                    Background="{DynamicResource PrimaryColor}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
