<Window x:Class="Projekat_B_isTovar.Views.MyProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding Title}"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:MyProfileStrings x:Key="Strings"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="MaterialDesign:HintAssist.Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                       Foreground="{DynamicResource PrimaryColor}" HorizontalAlignment="Center"/>

            <TextBox x:Name="txtUsername" MaterialDesign:HintAssist.Hint="{Binding Username}" Margin="0,0,0,10"/>
            <TextBox x:Name="txtIme" MaterialDesign:HintAssist.Hint="{Binding FirstName}" Margin="0,0,0,10"/>
            <TextBox x:Name="txtPrezime" MaterialDesign:HintAssist.Hint="{Binding LastName}" Margin="0,0,0,10"/>
            <TextBox x:Name="txtEmail" MaterialDesign:HintAssist.Hint="{Binding Email}" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtPassword" MaterialDesign:HintAssist.Hint="{Binding Password}" Margin="0,0,0,10"/>
            <TextBox x:Name="txtTelefon" MaterialDesign:HintAssist.Hint="{Binding Phone}" Margin="0,0,0,10"/>

            <!-- Specifična polja za dispečera -->
            <TextBox x:Name="txtStatus" MaterialDesign:HintAssist.Hint="{Binding Status}" IsReadOnly="True" Margin="0,0,0,10"/>

            <Button Content="{Binding SaveButton}" Height="40" Background="{DynamicResource PrimaryColor}"
                    Foreground="White" FontWeight="Bold" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
