<Window x:Class="Projekat_B_isTovar.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding Title}"
        Height="820" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:RegisterStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid>
        <Border Background="{DynamicResource CardBackgroundColor}"
                CornerRadius="20"
                Padding="30"
                Width="360"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource MaterialDesignElevation2}">

            <StackPanel>

                <TextBlock Text="{Binding Source={StaticResource Strings}, Path=Title, Mode=OneWay}"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <ComboBox x:Name="cmbRole"
                          materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Role, Mode=OneWay}"
                          Margin="0,0,0,15"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Foreground="{DynamicResource PrimaryColor}">
                    <ComboBoxItem Content="{Binding Source={StaticResource Strings}, Path=Dispatcher, Mode=OneWay}" Tag="0"/>
                    <ComboBoxItem Content="{Binding Source={StaticResource Strings}, Path=Driver, Mode=OneWay}" Tag="1"/>
                </ComboBox>

                <TextBox x:Name="txtUsername" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Username, Mode=OneWay}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                <TextBox x:Name="txtIme" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=FirstName, Mode=OneWay}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                <TextBox x:Name="txtPrezime" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=LastName, Mode=OneWay}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                <TextBox x:Name="txtEmail" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Email, Mode=OneWay}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                <PasswordBox x:Name="txtPassword" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Password, Mode=OneWay}"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                <TextBox x:Name="txtTelefon" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=Phone, Mode=OneWay}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>

                <StackPanel x:Name="driverFields" Visibility="Collapsed">
                    <TextBox x:Name="txtBrojDozvole" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=LicenseNumber, Mode=OneWay}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                    <TextBox x:Name="txtLicenca" materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=License, Mode=OneWay}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Foreground="{DynamicResource TextColor}" Background="Transparent" Margin="0,0,0,15"/>
                </StackPanel>

                <Button Content="{Binding Source={StaticResource Strings}, Path=RegisterButton, Mode=OneWay}"
                        Height="40"
                        Background="{DynamicResource PrimaryColor}"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Register_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>

                <TextBlock x:Name="lblError"
                           Text=""
                           Foreground="Tomato"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
