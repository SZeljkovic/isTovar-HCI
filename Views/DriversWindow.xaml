<Window x:Class="Projekat_B_isTovar.Views.DriversWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding DriversTitle}" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:DriversStrings x:Key="Strings"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <materialDesign:BooleanToVisibilityConverter x:Key="InverseBoolToVisConverter" TrueValue="Collapsed" FalseValue="Visible"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=DriversTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource PrimaryColor}"/>

        <!-- DataGrid -->
        <DataGrid x:Name="DriversDataGrid" 
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                  RowBackground="{DynamicResource RowBackgroundBrush}"
                  Foreground="{DynamicResource PrimaryColor}"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Id}" Binding="{Binding IdKorisnika}" Width="50"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnUsername}" Binding="{Binding KorisnickoIme}" Width="120"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnName}" Binding="{Binding Ime}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnSurname}" Binding="{Binding Prezime}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnEmail}" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnPhone}" Binding="{Binding BrojTelefona}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnLicenseNo}" Binding="{Binding BrojDozvole}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnLicense}" Binding="{Binding Licenca}" Width="100"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnTruckId}" Binding="{Binding IdKamiona}" Width="80"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ColumnAvailable}" Binding="{Binding Dostupnost}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugmad za akcije -->
        <StackPanel x:Name="ActionButtonsPanel" Orientation="Horizontal" Grid.Row="2" Margin="10,5"
            Visibility="{Binding IsVisible, ElementName=EditPanel, Converter={StaticResource InverseBoolToVisConverter}}">
            <!-- postojeći buttoni ostaju isti -->
        <Button Content="{Binding Source={StaticResource Strings}, Path=EditButton}"
                    Width="100" Margin="5"
                    Background="{DynamicResource PrimaryColor}"
                    Click="EditDriver_Click"/>
            <Button Content="{Binding Source={StaticResource Strings}, Path=DeleteButton}"
                    Width="100" Margin="5"
                    Background="{DynamicResource PrimaryColor}"
                    Click="DeleteDriver_Click"/>
            <Button Content="{Binding Source={StaticResource Strings}, Path=CloseButton}" 
                    Width="100" Height="30"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Background="{DynamicResource PrimaryColor}"
                    Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Panel za izmjenu -->
        <GroupBox Header="{Binding Source={StaticResource Strings}, Path=EditDriver}" 
                  Grid.Row="2"
                  x:Name="EditPanel" Visibility="Collapsed" Margin="10">
            <StackPanel Margin="10" Width="400">
                <TextBox x:Name="editUsername"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnUsername}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editFirstName"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnName}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editLastName"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnSurname}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editEmail"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnEmail}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editPhone"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnPhone}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editLicenseNo"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnLicenseNo}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>
                <TextBox x:Name="editLicense"
                         materialDesign:HintAssist.Hint="{Binding Source={StaticResource Strings}, Path=ColumnLicense}"
                         Foreground="{DynamicResource PrimaryColor}" Margin="0,5"/>

                <Button Content="{Binding Source={StaticResource Strings}, Path=SaveButton}"
                        Width="120" Height="30"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource PrimaryColor}"
                        Click="UpdateDriver_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>