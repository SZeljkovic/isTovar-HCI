<Window x:Class="Projekat_B_isTovar.Views.ToursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Projekat_B_isTovar.Resources"
        Title="{Binding ToursTitle}" Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}">

    <Window.Resources>
        <local:ToursStrings x:Key="Strings"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Naslov -->
        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=ToursTitle}" 
                   FontSize="22" FontWeight="Bold" 
                   Margin="10"
                   Foreground="{DynamicResource PrimaryColor}"/>

        <!-- Search Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=SearchLabel}" 
                       VerticalAlignment="Center" Margin="0,0,10,0"
                       Foreground="{DynamicResource PrimaryColor}"/>
            <TextBox x:Name="SearchTextBox" Width="200" Height="25"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="ToursDataGrid" 
                  Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                  RowBackground="{DynamicResource RowBackgroundBrush}"
                  Foreground="{DynamicResource PrimaryColor}"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Id}" Binding="{Binding IdTure}" Width="80"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=StartDate}" Binding="{Binding VrijemePolaska}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=ArrivalDate}" Binding="{Binding VrijemeDolaska}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=Status}" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=DriverName}" Binding="{Binding DriverName}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=DispatcherName}" Binding="{Binding DispatcherName}" Width="150"/>
                <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=FinalPrice}" Binding="{Binding UkupnaCijenaTure}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Dugme za zatvaranje -->
        <Button Content="{Binding Source={StaticResource Strings}, Path=CloseButton}" 
                Grid.Row="3"
                Width="100" Height="30"
                Margin="10"
                Background="{DynamicResource PrimaryColor}"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>